<div  class="panel panel-default">
<div class="panel-heading">Address</div>
<div class="panel-body">
<%= form_for([@address.contact, @address], :html => {:class => "inline"}) do |f| %>

  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @address.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-2 col-sm-2">
    <%= f.label :Address1, :html => {:class => "sr-only"} %>
    </div>
    <div class="col-xs-4 col-sm-4">
    <%= f.text_field :address1, :html => {:class => "form-control", :placeholder => "Username"}  %>
    </div>
    <div class="col-xs-2 col-sm-2">
    <%= f.label :Address2, :html => {:class => "sr-only"} %>
    </div>
    <div class="col-xs-4 col-sm-4">
    <%= f.text_field :address2, :html => {:class => "form-control"} %>
    </div>
</div>

  <div class="input-group">
      <%= f.label :City %>
      <%= f.text_field :city%>                                                                         
      <%= f.label :State %>                                                              
    <% if (controller_name=='address' and action_name =='edit') %>
      <%= f.collection_select :state_id, @states, :id, :abbname, include_blank: true %>     
    <% else %>
      <%= collection_select :address, :state_id, State.all.order('name asc'), :id, :name, prompt: true %>
    <% end %>
    <%= f.label :Zipcode %>                                                        
    <%= f.text_field :zipcode %>
  </div> 

<div class="row">
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
</div>
</div>
</div>
