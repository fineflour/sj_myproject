<h1>Contacts</h1>
      <div class="row">
          <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
      </div>

      <div class="row">
        <div class="col-md-12">
         <p>[<%= @contacts_count %> Contacts]</p>
        </div>
       </div>

<% @contacts.each do |contact| %>
  <div class="row">
    <div class="col-md-2"><%= contact.id %></div>
    <div class="col-md-2"><%= link_to contact.fullname, order_path(:id => contact.order_id, :contact_id => contact.id) %></div>
    <div class="col-md-2"><%= contact.email %></div>
    <div class="col-md-2"><%= contact.date_ordered %></div>
  </div>
<% end %>

<div class="row">
      <%= will_paginate @contacts %>
 </div>

