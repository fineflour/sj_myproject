<%= form_for [post, comment], remote: true do |f| %>
    <div class="form-group">
      <%= f.text_area :body, rows: 4, cols: 40, class: 'form-control', placeholder: "Enter comment" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update Comment", class: 'btn btn-success' %>
    </div>
<% end %>
